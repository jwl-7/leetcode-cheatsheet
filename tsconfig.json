{
    "compilerOptions": {
        // Options
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "types": ["node", "vite/client"],

        // Paths
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@code/*": ["src/code/*"],
            "@components/*": ["src/components/*"],
            "@fonts/*": ["src/fonts/*"],
            "@hooks/*": ["src/hooks/*"],
            "@icons/*": ["src/icons/*"],
            "@images/*": ["src/images/*"],
            "@styles/*": ["src/styles/*"],
            "@sections/*": ["src/sections/*"],
            "@utils/*": ["src/utils/*"]
        },

        // Bundler
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        // Linting
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src",
        "@styles/styles.d.ts",
        "vite.config.ts"
    ]
}